{% extends '@App/base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('assets/css/BudgetPosition/style.css') }}">
{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <h1 class="text-center">Budżet {{ year }}</h1>
            <h2 class="text-center">Wybierz miesiąc:</h2>
        </div>

        {% set months = ['Styczeń', 'Luty', 'Marzec', 'Kwiecień',
            'Maj', 'Czerwiec', 'Lipiec', 'Sierpień', 'Wrzesień', 'Październik', 'Listopad', 'Grudzień'] %}
        {% set k = 1 %}

        {% for i in 1..4 %}
            <div class="row">

                {% for j in range(1, 3)  %}


                    {% set month = k %}
                    {% if month | length < 2 %}

                        {% set month = "0" ~ k %}

                    {% endif %}
                    <div class="col-sm-4">
                        <div class="month-item">
                            <a href="{{ url('app_budgetposition_onemonth', {'year': year, 'month': month }) }}">{{ months[k-1]}}</a>
                        </div>
                    </div>
                    {% set k = k + 1 %}
                {% endfor %}

            </div>
        {% endfor %}


    </div>
{% endblock %}

