                </ul>
            </div>
        </div>
    </nav>
{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                {#<a id="addCategory" class="btn btn-info" href="{{ url('app_category_addcategory', {'year': year, 'month': month}) }}">Dodaj Kategorię</a>#}
                <a id="addCategory" class="btn btn-primary">Dodaj Kategorię</a>

                <div class="make_hidden">

                    {{ render(controller('AppBundle:Category:addCategory',{ 'year': year, 'month': month })) }}

                </div>

                {#I don't have id in this view to pre render modify controller, and also id will be various.#}
                {#<div class="make_hidden">#}
                    {#{{ render(controller('AppBundle:Category:modifyCategory',{ 'year': year, 'month': month, 'id': 0 })) }}#}
                {#</div>#}

            </div>
        </div>
        <h3>Wszystkie kategorie: </h3>
        <table class="table">
            <thead>
                <tr>
                    <th>Nazwa kategorii</th>
                    <th>Typ kategorii</th>
                    <th>Opcje</th>
                </tr>
            </thead>
            <tbody class="category_list">
                {% if categories %}
                    {% for category in categories %}
                        <tr>
                            <td>
                                <a href="{{ path('app_category_categorydetails', {'month': month, 'year': year, 'categoryId': category.id }) }}">{{ category.name }}</a>
                            </td>
                            <td>{{ category.type }}</td>
                            <td>
                                <a href="{{ path('app_category_modifycategory', {'year': year, 'month': month, 'id': category.id}) }}" class="btn btn-primary">Edytuj</a>
                                <a href="{{ path('app_category_deletecategory', {'year': year, 'month': month, 'id': category.id}) }}" class="btn btn-danger">Usuń</a>
                            </td>
                        </tr>
                    {% endfor %}
                {% endif %}
            </tbody>
        </table>
    </div>
{% endblock %}

